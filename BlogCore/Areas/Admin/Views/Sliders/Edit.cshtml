@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar Articulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar un Slider</h3>
@*aqui le pasa el metodo de tipo Post*@
<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <div class="row px-2 mx-2 border">
        @*Para refenciarmultiplataforma de Data entype@
            <div class="row px-2 mx-2 border">
                @*Validacion de los Campos requeridos con un danger*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    @*la propiedad nombre con respecto al modelo*@
                    <input asp-for="Nombre" class="form-control" />
                    @*span nos ayuda a la Validacion*@
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    @*la propiedad nombre con respecto al modelo*@
                    <input asp-for="Estado" class="form-control"/>
                    @*span nos ayuda a la Validacion*@
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

            </div>

           

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>

                    </div>
                    @*Craemos una Vista Parecial _VistaCrearVolver en la carpeta Shared y la Instaciamos aca
                        <partial name="_VistaCrearVolver" /> alt="Alternate Text" *@
                </div>
            </div>

            @*Mostrar Imagen*@



        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>

    </div>
</form>

