@model BlogCore.Acceso.ViewModels.HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*SILDER*@
<header>
    <div id="carouselExampleInicateor" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{ int cont = 0;}

            @foreach (var item in Model.Slider)
            {
                var itemDinamico = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item @itemDinamico">
                    <img src="@Url.Content(item.UrlImagen)" />
                    <h1 class="text-dark text-center">@Html.Raw(@item.Nombre)</h1>
                </div>

            }



        </div>

        @*En la Pagina de Boostrap descarga el Carosuel With controls solo la Parte de la etiqueta a*@
        @*En la layau en div container poner la clase container-Fliut para que las imagenes ocupen todo el lugar*@


        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

</header>
@*Cierre de el Container*@


@*La parte de Bajo de la Pantalla principal de el Index*@

<div class="row fondoTitulo mt-5">
    <div class="col-sm-12 py-5">
<h1 class="text-center text-white">Ultimos Cursos y Tutoriales</h1>


    </div>
</div>
@*Comienzo del Articulo*@
@if (Model.ListaArticulo.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var articulo in Model.ListaArticulo.OrderBy(o => o.Id))
        {
            <div class="col-4">
                <div class="card">
<img src="@articulo.UrlImagen" class="img-thumbnail" width="100%" />
                    <div class="card-body">
                        <h5 class="text-center">@articulo.Nombre</h5>
                        <p>@articulo.FechaCreacion</p>
                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px" asp-route-id="@articulo.Id">Mas Informacion</a>
                    </div>
                </div>
            </div>
        }

        
        
        
    </div>

}
else
{ 
<p>No hay Articulo No existe Articulo</p>
}